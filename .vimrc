filetype plugin indent on

colorscheme desert
syntax on

set encoding=utf8
set fileencoding=utf8

set nowrap

set hlsearch
set ignorecase
set smartcase

set autoindent

set ruler
set number
set list
set wildmenu

set shiftwidth=2
set softtabstop=2
set expandtab
set tabstop=2
set smarttab

set clipboard+=unnamed
set clipboard=unnamed

set nobackup

imap { {}<LEFT>
imap [ []<LEFT>
imap ( ()<LEFT>
